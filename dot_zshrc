alias fh="fc -l 1 | fzf --tac --no-sort --height=50%"
alias ffile="find . -type f | fzf --preview 'bat --color=always {}'"

# Lazy load zoxide (from your Linux Mint gist)
z() {
    unfunction z 2>/dev/null
    eval "$(zoxide init zsh)"
    z "$@"
}
alias zi='z -i'  # Interactive selection

