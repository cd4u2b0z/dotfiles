# Test your shell startup time
timezsh() {
    shell=${1-$SHELL}
    echo "Testing $shell startup time (10 runs):"
    for i in $(seq 1 10); do
        time $shell -i -c exit
    done
}
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
# üéµ TMUX MUSIC INTERFACE
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

# Add ~/.local/bin to PATH if not already there
[[ ":$PATH:" != *":$HOME/.local/bin:"* ]] && export PATH="$HOME/.local/bin:$PATH"

# Launch epic TMUX music interface
music-interface() {
    if tmux has-session -t music 2>/dev/null; then
        echo "üéµ Attaching to existing music session..."
        tmux attach-session -t music
    else
        echo "üéµ Creating new music interface..."
        # Create new TMUX session with music setup
        tmux new-session -d -s music -x 100 -y 30 \; \
            send-keys 'echo "üéµ Welcome to your Music Interface!"' Enter \; \
            send-keys 'echo "Windows: 1=welcome 2=ncspot 3=cava 4=ncmpcpp 5=controls"' Enter \; \
            new-window -n "ncspot" \; \
            send-keys 'spotify-safe' Enter \; \
            new-window -n "cava" \; \
            send-keys 'cava' Enter \; \
            new-window -n "ncmpcpp" \; \
            send-keys 'ncmpcpp' Enter \; \
            new-window -n "controls" \; \
            send-keys 'echo "Music Controls:"' Enter \; \
            send-keys 'echo "playerctl play-pause  # Play/pause"' Enter \; \
            send-keys 'echo "playerctl next        # Next track"' Enter \; \
            send-keys 'echo "playerctl previous    # Previous track"' Enter \; \
            send-keys 'echo ""' Enter \; \
            send-keys 'echo "TMUX Navigation:"' Enter \; \
            send-keys 'echo "Ctrl+B + [1-5]       # Switch windows"' Enter \; \
            send-keys 'echo "Ctrl+B + d           # Detach session"' Enter \; \
            select-window -t 2 \; \
            attach-session
    fi
}

# Quick TMUX music session (simple version)
music-tmux() {
    if tmux has-session -t music 2>/dev/null; then
        echo "Attaching to existing music session..."
        tmux attach-session -t music
    else
        echo "Creating new music session..."
        music-interface
    fi
}

# Split-screen music setup (ncspot + cava)
music-split() {
    tmux new-session -d -s music-split \; \
        send-keys 'ncspot' Enter \; \
        split-window -h \; \
        send-keys 'cava' Enter \; \
        select-pane -t 0 \; \
        attach-session
}

# Triple music view (ncspot + cava + ncmpcpp)
music-triple() {
    tmux new-session -d -s music-triple \; \
        send-keys 'ncspot' Enter \; \
        split-window -v \; \
        send-keys 'cava' Enter \; \
        split-window -h \; \
        send-keys 'ncmpcpp' Enter \; \
        select-pane -t 0 \; \
        attach-session
}


# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
# üõ°Ô∏è SAFE MUSIC CONTROLS (Prevents background processes)
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

# Override previous music aliases with safe versions
alias spotify='spotify-safe'
alias music='spotify-safe'

# Kill any orphaned music processes
music-cleanup() {
    echo "ÔøΩÔøΩ Cleaning up background music processes..."
    pkill -f ncspot 2>/dev/null && echo "‚úÖ ncspot processes killed"
    pkill -f spotify 2>/dev/null && echo "‚úÖ spotify processes killed"
    echo "üéµ Music cleanup complete!"
}

# Smart music launcher with cleanup
music-safe() {
    # Kill any existing instances first
    pkill -f ncspot 2>/dev/null
    echo "üéµ Launching ncspot safely..."
    spotify-safe
}


# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
# üéõÔ∏è TMUX SESSION MANAGEMENT
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

# Kill and restart music session
music-restart() {
    echo "üîÑ Restarting music session..."
    tmux kill-session -t music 2>/dev/null
    tmux kill-session -t music-split 2>/dev/null  
    tmux kill-session -t music-triple 2>/dev/null
    music-cleanup
    echo "‚úÖ Sessions killed, launching fresh interface..."
    music-interface
}

# List all music sessions
music-sessions() {
    echo "üéµ Music TMUX Sessions:"
    tmux list-sessions 2>/dev/null | grep -E "(music|ncspot|cava)" || echo "No music sessions found"
}

# Kill all music sessions
music-kill-sessions() {
    echo "üíÄ Killing all music sessions..."
    tmux kill-session -t music 2>/dev/null && echo "‚úÖ music session killed"
    tmux kill-session -t music-split 2>/dev/null && echo "‚úÖ music-split session killed"
    tmux kill-session -t music-triple 2>/dev/null && echo "‚úÖ music-triple session killed"
    music-cleanup
    echo "üéµ All music sessions terminated!"
}


