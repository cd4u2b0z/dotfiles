# Generic lazy loader function
lazy_load() {
    local command="$1"
    local init_command="$2"
    local aliases=("${@:3}")
    
    eval "
        $command() {
            unfunction $command 2>/dev/null
            $init_command
            $command \"\$@\"
        }
    "
    
    for alias_cmd in $aliases; do
        eval "alias $alias_cmd='$command'"
    done
}

# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
# üöÄ HIGH-VALUE LAZY LOADS ONLY
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

# 1. Zoxide (you already have this - enhanced version)
lazy_load "z" "eval \"\$(zoxide init zsh)\"" "zi"

# 2. FZF (only if installed - saves ~100ms startup)
if command -v fzf &> /dev/null; then
    lazy_load "fzf" "eval \"\$(fzf --zsh)\"" 
    
    # Useful FZF shortcuts (lazy loaded)
    fzf-file() { 
        z  # Trigger zoxide lazy load
        find . -type f | fzf --preview 'cat {}' | xargs -r $EDITOR
    }
fi

# 3. Git completions (saves ~50ms startup)
git() {
    unfunction git 2>/dev/null
    # Load git completions if available
    if [[ -f /usr/share/git/completion/git-completion.zsh ]]; then
        source /usr/share/git/completion/git-completion.zsh
    fi
    command git "$@"
}

