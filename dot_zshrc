# Yazi with smart directory jumping
y() {
    local target="${1:-.}"
    case "$target" in
        g|games) yazi ~/Games ;;
        d|downloads) yazi ~/Downloads ;;
        c|config) yazi ~/.config ;;
        s|scripts) yazi ~/scripts ;;
        *) yazi "$target" ;;
    esac
}

# Quick access aliases
alias yg='y games'
alias yd='y downloads'
alias yc='y config'
alias yz='y'

# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
# üñ•Ô∏è NVIDIA RTX CONTROLS (if you have NVIDIA)
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

# Full Composition Pipeline (no tearing, slight input lag)
alias nvon='nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 {ForceFullCompositionPipeline=On}"'

# Partial Composition Pipeline (balanced)
alias nvon-light='nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 {ForceCompositionPipeline=On}"'

# Composition Pipeline OFF (max fps, possible tearing)
alias nvoff='nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 {ForceFullCompositionPipeline=Off, ForceCompositionPipeline=Off}"'

# Status check
alias nvstatus='nvidia-settings -q CurrentMetaMode | grep -o "ForceFullCompositionPipeline=[A-Za-z]*"'
alias nvcheck='nvstatus'


