/* REFINED NORD PROFESSIONAL THEME - 10/10 Edition */

* {
  border: none;
  border-radius: 0;
  font-family: "JetBrainsMono Nerd Font", "SF Pro Display", system-ui, sans-serif;
  font-weight: 500;
  font-size: 12px; /* Reduced from 13px for tighter appearance */
  min-height: 0;
  color: #E5E9F0;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
}

window#waybar {
  background: linear-gradient(135deg,
    rgba(46, 52, 64, 0.85) 0%,
    rgba(59, 66, 82, 0.75) 50%,
    rgba(67, 76, 94, 0.85) 100%);
  border: 1px solid rgba(136, 192, 208, 0.25);
  border-radius: 14px; /* Slightly reduced from 16px */
  margin: 6px; /* Reduced from 8px */
  padding: 0;
  box-shadow:
    0 6px 24px rgba(0, 0, 0, 0.4), /* Reduced shadow intensity */
    0 0 0 1px rgba(216, 222, 233, 0.05),
    inset 0 1px 0 rgba(236, 239, 244, 0.1);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

window#waybar:hover {
  background: linear-gradient(135deg,
    rgba(46, 52, 64, 0.9) 0%,
    rgba(59, 66, 82, 0.8) 50%,
    rgba(67, 76, 94, 0.9) 100%);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.5),
    0 0 0 1px rgba(136, 192, 208, 0.15),
    inset 0 1px 0 rgba(236, 239, 244, 0.15);
}

/* UNIVERSAL MODULE STYLING - Refined & Tighter */
.modules-left > widget > *,
.modules-center > widget > *,
.modules-right > widget > * {
  margin: 2px 1px; /* Reduced from 3px 2px */
  padding: 6px 10px; /* Reduced from 8px 14px */
  background: linear-gradient(135deg,
    rgba(76, 86, 106, 0.6) 0%,
    rgba(67, 76, 94, 0.4) 100%);
  border: 1px solid rgba(129, 161, 193, 0.2);
  border-radius: 10px; /* Reduced from 12px */
  color: #D8DEE9;
  font-weight: 600;
  box-shadow:
    0 2px 6px rgba(0, 0, 0, 0.25), /* Reduced shadow */
    inset 0 1px 0 rgba(236, 239, 244, 0.08);
  transition: all 0.25s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.modules-left > widget > *:hover,
.modules-center > widget > *:hover,
.modules-right > widget > *:hover {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.3) 0%,
    rgba(129, 161, 193, 0.25) 50%,
    rgba(143, 188, 187, 0.3) 100%);
  border-color: rgba(136, 192, 208, 0.6);
  color: #ECEFF4;
  box-shadow:
    0 4px 16px rgba(0, 0, 0, 0.4),
    0 0 20px rgba(136, 192, 208, 0.2),
    inset 0 1px 0 rgba(236, 239, 244, 0.15);
  text-shadow: 0 0 8px rgba(136, 192, 208, 0.5);
}

/* WORKSPACES - Enhanced Indicators */
#workspaces {
  background: linear-gradient(135deg,
    rgba(76, 86, 106, 0.7) 0%,
    rgba(67, 76, 94, 0.5) 100%);
  border: 1px solid rgba(129, 161, 193, 0.3);
  border-radius: 12px; /* Reduced from 14px */
  padding: 3px 5px; /* Reduced from 4px 6px */
  margin-right: 5px; /* Reduced from 6px */
}

#workspaces button {
  padding: 5px 8px; /* Reduced from 6px 10px */
  margin: 0 1px;
  color: #4C566A; /* Darker for inactive - like dots */
  background: rgba(59, 66, 82, 0.4); /* More transparent when inactive */
  border: 1px solid rgba(76, 86, 106, 0.2);
  border-radius: 8px;
  font-weight: 500; /* Reduced from 700 */
  font-size: 12px; /* Reduced from 14px */
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
}

#workspaces button:hover {
  background: linear-gradient(135deg,
    rgba(129, 161, 193, 0.3) 0%,
    rgba(136, 192, 208, 0.2) 100%);
  color: #81A1C1;
  border-color: rgba(129, 161, 193, 0.4);
  box-shadow: 0 0 8px rgba(129, 161, 193, 0.3);
}

#workspaces button.active {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.9) 0%,
    rgba(143, 188, 187, 0.8) 100%);
  color: #2E3440;
  border-color: rgba(136, 192, 208, 1.0);
  font-weight: 700; /* Bold when active */
  box-shadow: 
    0 0 12px rgba(136, 192, 208, 0.5),
    inset 0 1px 2px rgba(236, 239, 244, 0.3);
}

/* SYSTEM MONITORS - With Temperature Color Coding */
#cpu, #memory {
  background: linear-gradient(135deg,
    rgba(94, 129, 172, 0.5) 0%,
    rgba(76, 86, 106, 0.3) 100%);
  border: 1px solid rgba(94, 129, 172, 0.4);
  color: #5E81AC;
  font-weight: 600;
}

#cpu:hover, #memory:hover {
  background: linear-gradient(135deg,
    rgba(94, 129, 172, 0.7) 0%,
    rgba(129, 161, 193, 0.5) 100%);
  color: #88C0D0;
  border-color: rgba(94, 129, 172, 0.8);
  box-shadow: 0 0 12px rgba(94, 129, 172, 0.4);
}

/* TEMPERATURE - Dynamic Color Coding */
#temperature {
  background: linear-gradient(135deg,
    rgba(163, 190, 140, 0.5) 0%, /* Default green base */
    rgba(76, 86, 106, 0.3) 100%);
  border: 1px solid rgba(163, 190, 140, 0.4);
  color: #A3BE8C; /* Green for cool temps */
  font-weight: 600;
}

#temperature:hover {
  background: linear-gradient(135deg,
    rgba(163, 190, 140, 0.7) 0%,
    rgba(129, 161, 193, 0.5) 100%);
  box-shadow: 0 0 12px rgba(163, 190, 140, 0.4);
}

/* Temperature Warning States */
#temperature.warning {
  background: linear-gradient(135deg,
    rgba(235, 203, 139, 0.6) 0%, /* Yellow for warm */
    rgba(76, 86, 106, 0.3) 100%);
  border: 1px solid rgba(235, 203, 139, 0.5);
  color: #EBCB8B;
}

#temperature.critical {
  background: linear-gradient(135deg,
    rgba(191, 97, 106, 0.7) 0%, /* Red for hot */
    rgba(76, 86, 106, 0.3) 100%);
  border: 1px solid rgba(191, 97, 106, 0.6);
  color: #BF616A;
  animation: pulse-warning 2s infinite;
}

@keyframes pulse-warning {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

/* CLOCK - Enhanced with Day Display */
#clock {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.4) 0%,
    rgba(143, 188, 187, 0.3) 100%);
  border: 1px solid rgba(136, 192, 208, 0.5);
  color: #88C0D0;
  font-weight: 700;
  font-size: 13px; /* Slightly larger for importance */
  letter-spacing: 0.3px; /* Reduced from 0.5px */
  padding: 6px 12px; /* Custom padding for clock */
}

#clock:hover {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.6) 0%,
    rgba(143, 188, 187, 0.5) 100%);
  color: #ECEFF4;
  box-shadow: 0 0 16px rgba(136, 192, 208, 0.4);
}

/* WEATHER - Matches refined clock styling */
#custom-weather {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.4) 0%,
    rgba(143, 188, 187, 0.3) 100%);
  border: 1px solid rgba(136, 192, 208, 0.5);
  color: #88C0D0;
  font-weight: 600; /* Slightly less than clock */
  font-size: 12px;
  letter-spacing: 0.2px;
}

#custom-weather:hover {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.6) 0%,
    rgba(143, 188, 187, 0.5) 100%);
  color: #ECEFF4;
  box-shadow: 0 0 16px rgba(136, 192, 208, 0.4);
}

/* NETWORK & AUDIO - Consistent Communication Modules */
#network, #pulseaudio, #bluetooth {
  background: linear-gradient(135deg,
    rgba(143, 188, 187, 0.4) 0%,
    rgba(129, 161, 193, 0.3) 100%);
  border: 1px solid rgba(143, 188, 187, 0.4);
  color: #8FBCBB;
  font-weight: 600;
}

#network:hover, #pulseaudio:hover, #bluetooth:hover {
  background: linear-gradient(135deg,
    rgba(143, 188, 187, 0.6) 0%,
    rgba(129, 161, 193, 0.5) 100%);
  color: #ECEFF4;
  border-color: rgba(143, 188, 187, 0.7);
  box-shadow: 0 0 12px rgba(143, 188, 187, 0.4);
}

/* STORAGE & SYSTEM MONITOR - Unified Styling */
#disk, #custom-system-monitor {
  background: linear-gradient(135deg,
    rgba(235, 203, 139, 0.3) 0%,
    rgba(208, 135, 112, 0.2) 100%);
  border: 1px solid rgba(235, 203, 139, 0.4);
  color: #EBCB8B;
  font-weight: 600;
}

#disk:hover, #custom-system-monitor:hover {
  background: linear-gradient(135deg,
    rgba(235, 203, 139, 0.5) 0%,
    rgba(208, 135, 112, 0.4) 100%);
  color: #ECEFF4;
  box-shadow: 0 0 12px rgba(235, 203, 139, 0.4);
}

/* TRAY - Refined Minimal */
#tray {
  background: rgba(67, 76, 94, 0.5); /* More transparent */
  border: 1px solid rgba(76, 86, 106, 0.3); /* Lighter border */
  padding: 4px 8px; /* Custom tray padding */
}

#tray:hover {
  background: rgba(76, 86, 106, 0.7);
  border-color: rgba(129, 161, 193, 0.4);
  box-shadow: 0 0 8px rgba(129, 161, 193, 0.3);
}